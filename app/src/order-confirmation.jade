extends ./views/_layout.jade

block content
	table.row
		tr
			td.wrapper.last
				table.twelve.columns
					tr
						td(style="text-align: right;")
							| Date: {{ date | date: "%m/%d/%Y" }}
					tr
						td(style="text-align: right;")
							| Ordernumber: {{ order_name }}
					tr
						td
							p Hi there,
							p
								| Thank you for your order with {{ shop_name }}. We're sending you this e-mail to let you know your order has been received and will be processed as soon as possible! You will get another e-mail as soon as your order is out the door.
							h5 Your order:
						td.expander

	table.row
		tr
			td

				table.cartTable
					thead
						th Item
						th &nbsp;
						th quantity
						th price

					| {% for line in line_items %}
					tr
						td
							img(src="{{ line | img_url: 'small' }}")
						td {{ line.title }}
						td {{ line.quantity }} x
						td {{ line.price | money }}</li>
					| {% endfor %}

					tfoot
						| {% if discounts %}
						tr
							td
								| Discounts : {{ discounts_savings | money_with_currency }}
						| {% endif %}

						tr
							td
								| Subtotal : {{ subtotal_price | money_with_currency }}

						| {% for tax_line in tax_lines %}
						tr
							td
								| {{ tax_line.title }} : {{ tax_line.price | money_with_currency }}
						| {% endfor %}

						| {% if requires_shipping %}
						tr
							td
								| Shipping : {{ shipping_price | money_with_currency }}
						| {% endif %}

						tr
							td
								| Total : {{ total_price | money_with_currency }}


	table.customerDetails
		tr
			td.wrapper
				table.six.columns
					thead
						th.left-text-pad
							| Shipping details

					tr
						td.left-text-pad
							| {{ shipping_address.name }}
					tr
						td.left-text-pad
							| {{ shipping_address.street }}
					tr
						td.left-text-pad
							| {{ shipping_address.city }}
					tr
						td.left-text-pad
							| {{ shipping_address.province }}
					tr
						td.left-text-pad
							| {{ shipping_address.zip }}
					tr
						td.left-text-pad
							| {{ shipping_address.country }}
			| {% if billing_address %}
			td.wrapper.last
				table.six.columns
					thead
						th.left-text-pad
							| Billing details

					tr
						td.left-text-pad
							| {{ shipping_address.name }}
					tr
						td.left-text-pad
							| {{ shipping_address.street }}
					tr
						td.left-text-pad
							| {{ shipping_address.city }}
					tr
						td.left-text-pad
							| {{ shipping_address.province }}
					tr
						td.left-text-pad
							| {{ shipping_address.zip }}
					tr
						td.left-text-pad
							| {{ shipping_address.country }}
			| {% endif %}
